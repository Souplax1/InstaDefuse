<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CounterStrikeSharp.API" Version="1.0.316" />
  </ItemGroup>

  <Target Name="PackagePlugin" AfterTargets="Build">
    <PropertyGroup>
      <PluginFolder>$(OutputPath)InstaDefuse</PluginFolder>
      <PluginDll>$(PluginFolder)\$(TargetFileName)</PluginDll>
    </PropertyGroup>
    <MakeDir Directories="$(PluginFolder)" />
    <Copy SourceFiles="$(TargetPath)" DestinationFiles="$(PluginDll)" OverwriteReadOnlyFiles="true" SkipUnchangedFiles="true" />
  </Target>

</Project>
